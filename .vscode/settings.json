{
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb",
    "next.config.ts": "next-env.d.ts, components.json",
    "eslint.config.mjs": "prettier.config.mjs, lint-staged.config.mjs, postcss.config.mjs, commitlint.config.mjs, .editorconfig",
    "README.md": "*.md",
    ".env": ".env.*",
    "favicon.ico": "icon.svg, icon.png, apple-icon.png"
  },
  // Prevent wrong imports
  "typescript.preferences.autoImportSpecifierExcludeRegexes": [
    "@radix-ui",
    "next/router",
    "next/dist",
    "^lucide-react/dist/lucide-react.suffixed$"
  ]
}
